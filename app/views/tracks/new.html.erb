

<h1>Store a Track</h1>
<form action="<%= tracks_url %>" method="post">

    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <input
    type="hidden"
    name="track[album_id]"
    value="<%= params[:album_id] %>">

    <label for="track_name">Track Name</label>
    <input type="text"
           name="track[name]"
           value="<%= @track.name %>">
    <br>
    <label for="track_lyric">Track Lyrics</label>

    <input type="textarea" name="track[lyrics]" value="<%= @track.lyrics %>">


    <input type="submit" value="Submit Track">
  </form>

</form>
